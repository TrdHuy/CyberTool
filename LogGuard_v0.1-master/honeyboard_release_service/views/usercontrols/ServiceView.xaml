			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:honeyboard_release_service.views.usercontrols"
			 xmlns:vm="clr-namespace:honeyboard_release_service.view_models"
			 xmlns:uc_ti="clr-namespace:honeyboard_release_service.views.elements.tab_items"
			 xmlns:uc_pm="clr-namespace:honeyboard_release_service.views.elements.project_manager"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 mc:Ignorable="d"
			 Background="{StaticResource Background_Level1}"
			 d:DesignHeight="820"
			 d:DesignWidth="883.714"
			 FontFamily="Calibri">

	<UserControl.DataContext>
		<vm:HoneyReleaseServiceViewModel />
	</UserControl.DataContext>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="2.1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="8.525*" />
			<RowDefinition Height="10" />
			<RowDefinition Height="*" />
			<RowDefinition Height="10" />
			<RowDefinition Height="8.75*" />
		</Grid.RowDefinitions>

		<TabControl Grid.Column="3"
					Style="{StaticResource RT_TabControlStyle}"
					BorderThickness="0"
					Background="{StaticResource Background_Level2}"
					Grid.Row="0">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabItem}"
					   BasedOn="{StaticResource CyberTabItemStyle}" />
			</TabControl.Resources>
			<TabItem Header="Release">
				<TabItem.ContextMenu>
					<ContextMenu>
						<MenuItem Header="Add" />
						<MenuItem Header="Clear" />
						<MenuItem Header="Explore" />
					</ContextMenu>
				</TabItem.ContextMenu>
				<uc_ti:ReleaseTab />
			</TabItem>
			<TabItem Header="Merge">

			</TabItem>
			<TabItem Header="Merge &amp; Release">

			</TabItem>
			<TabItem Header="Version manager">

			</TabItem>
		</TabControl>

		<uc_pm:ProjectManager Grid.RowSpan="3" />
		
	</Grid>
