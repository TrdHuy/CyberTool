	</Style>

	<Style x:Key="CyberTreeItemFocusVisual">
		<Setter Property="Control.Template">
			<Setter.Value>
				<ControlTemplate>
					<Border>
						<Rectangle Margin="0,0,0,0"
								   StrokeThickness="5"
								   Stroke="Black"
								   StrokeDashArray="1 2"
								   Opacity="0" />
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="{x:Type ctrl:CyberTreeViewItem}"
		   TargetType="TreeViewItem">
		<Setter Property="Background"
				Value="#26292e" />
		<Setter Property="HorizontalContentAlignment"
				Value="{Binding Path=HorizontalContentAlignment,
    RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="VerticalContentAlignment"
				Value="{Binding Path=VerticalContentAlignment,
    RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter Property="Padding"
				Value="5,0,5,0" />
		<Setter Property="IsSelected"
				Value="{Binding IsSelected}" />
		<Setter Property="Foreground"
				Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
		<Setter Property="FocusVisualStyle"
				Value="{DynamicResource CyberTreeItemFocusVisual}" />

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:CyberTreeViewItem}">
					<Grid Background="{TemplateBinding Background}"
						  x:Name="MainGrid">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*"
											  MinWidth="130" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="10" />
							<RowDefinition Height="3" />
							<RowDefinition Height="6" />
							<RowDefinition Height="3" />
							<RowDefinition Height="10" />
							<RowDefinition />
						</Grid.RowDefinitions>

						<Grid x:Name="ExpanderPanel"
							  Grid.Row="0"
							  Grid.Column="1"
							  Width="12"
							  Grid.RowSpan="5">
							<Grid.RowDefinitions>
								<RowDefinition Height="10" />
								<RowDefinition Height="12" />
								<RowDefinition Height="10" />
							</Grid.RowDefinitions>
							<ToggleButton x:Name="Expander"
										  Grid.Row="1"
										  RenderTransformOrigin="0.5,0.5"
										  Style="{StaticResource CyberTreeExpandToggleStyle}"
										  ClickMode="Press"
										  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
								<ToggleButton.RenderTransform>
									<RotateTransform x:Name="PART_ToggleButtonRotateTransform" />
								</ToggleButton.RenderTransform>
							</ToggleButton>
							<Rectangle x:Name="VerLineBot2"
									   Grid.Row="2"
									   Fill="Gray"
									   Width="1" />
						</Grid>

						<Grid x:Name="IndicatorHeaderPanel"
							  Grid.Column="0"
							  Grid.Row="0"
							  Width="12"
							  Grid.RowSpan="5">
							<Grid.RowDefinitions>
								<RowDefinition Height="13" />
								<RowDefinition Height="6" />
								<RowDefinition Height="13" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="6" />
								<ColumnDefinition Width="6" />
							</Grid.ColumnDefinitions>
							<Rectangle x:Name="VerLineUp1"
									   Grid.Row="0"
									   Fill="Gray"
									   Width="1" />
							<Path Grid.Row="1"
								  Fill="Gray"
								  Stretch="Uniform"
								  Data="M 820.41992 -1.7675781 A 16.793785 16.793785 0 0 0 803.62695 15.025391 A 16.793785 16.793785 0 0 0 820.41992 31.820312 A 16.793785 16.793785 0 0 0 837.21484 15.025391 A 16.793785 16.793785 0 0 0 820.41992 -1.7675781 z " />
							<Rectangle x:Name="VerLineBot1"
									   Grid.Row="2"
									   Fill="Gray"
									   Width="1" />

							<Rectangle x:Name="HorLine1"
									   Grid.Row="1"
									   Grid.Column="1"
									   Fill="Gray"
									   Height="1" />
						</Grid>

						<Border x:Name="Bd"
								Grid.RowSpan="5"
								Grid.Column="2"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								Padding="{TemplateBinding Padding}">
							<ContentPresenter x:Name="PART_Header"
											  ContentSource="Header"
											  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
						</Border>

						<Rectangle x:Name="FeedbackRec" 
								   Grid.Column="0"
								   Grid.ColumnSpan="3"
								   Grid.Row="0"
								   Grid.RowSpan="5"
								   IsHitTestVisible="False"
								   Fill="Transparent"
								   StrokeThickness="0"/>
						<Rectangle x:Name="ItemPresenterVerLine"
								   Grid.Column="0"
								   Margin="-6,0,0,0"
								   Grid.Row="6"
								   Fill="Gray"
								   Width="1" />

						<ItemsPresenter x:Name="ItemsHost"
										Grid.Row="6"
										Margin="3,0,0,0"
										Grid.Column="1"
										Grid.ColumnSpan="5"
										Visibility="Collapsed">
							<ItemsPresenter.LayoutTransform>
								<ScaleTransform x:Name="PART_ItemHostScaleTransform"
												ScaleY="1" />
							</ItemsPresenter.LayoutTransform>
						</ItemsPresenter>
					</Grid>
					<ControlTemplate.Triggers>

						<!--Kiểm tra có phải phần tử cuối cùng ko-->
						<DataTrigger Binding="{Binding Path=IsLast}"
									 Value="true">
							<Setter TargetName="ItemPresenterVerLine"
									Property="Visibility"
									Value="Collapsed" />
						</DataTrigger>

						<!--Có mồ côi không-->
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding Path=IsOrphaned}"
										   Value="true" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="IndicatorHeaderPanel"
									Property="Visibility"
									Value="Collapsed" />
						</MultiDataTrigger>

						<!--Có được mở rộng ko-->
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding IsChecked, ElementName=Expander}"
										   Value="False" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="VerLineBot2"
									Property="Visibility"
									Value="Collapsed" />
						</MultiDataTrigger>


						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding Path=IsOrphaned}"
										   Value="true" />
								<Condition Binding="{Binding ItemsCount}"
										   Value="0" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="IndicatorHeaderPanel"
									Property="Visibility"
									Value="Visible" />
							<Setter TargetName="ExpanderPanel"
									Property="Visibility"
									Value="Collapsed" />
							<Setter TargetName="VerLineBot1"
									Property="Visibility"
									Value="Collapsed" />
							<Setter TargetName="VerLineUp1"
									Property="Visibility"
									Value="Collapsed" />
						</MultiDataTrigger>

						<!--Có cha và ko có phần tử-->
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding Path=IsOrphaned}"
										   Value="false" />
								<Condition Binding="{Binding ItemsCount}"
										   Value="0" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="ExpanderPanel"
									Property="Visibility"
									Value="Collapsed" />
						</MultiDataTrigger>


						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding Path=IsOrphaned}"
										   Value="false" />
								<Condition Binding="{Binding Path=IsLast}"
										   Value="true" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="VerLineBot1"
									Property="Visibility"
									Value="Collapsed" />
						</MultiDataTrigger>

						<!--<Trigger Property="IsMouseOver"
								 Value="True">
							<Setter TargetName="FeedbackRec"
									Property="Fill"
									Value="{DynamicResource MouseOverFillEffect_Level1}"/>
						</Trigger>-->

						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding Path=IsMouseOver, ElementName=MainGrid}"
										   Value="True" />
								<Condition Binding="{Binding Path=IsSelectable}"
										   Value="True" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="FeedbackRec"
									Property="Fill"
									Value="{DynamicResource MouseOverFillEffect_Level1}" />
						</MultiDataTrigger>
						
					</ControlTemplate.Triggers>

				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>